<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:elevation="@dimen/elevation_standard"
              android:background="?bgPrimary"
              android:layout_marginTop="@dimen/elevation_standard"
              android:layout_marginBottom="@dimen/elevation_standard"
              android:animateLayoutChanges="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/common_views_expandable_header"
            android:layout_width="match_parent"
            android:padding="@dimen/default_padding"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/common_views_expandable_title"
                style="@style/TextAppearance.AppCompat.Title"
                tools:text="Equipment"
                android:textColor="?typePrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/common_views_expandable_button"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/common_views_ic_chevron_down"
                android:layout_gravity="end|center_vertical"
                android:layout_height="wrap_content"/>

    </FrameLayout>

    <LinearLayout
            android:id="@+id/common_views_expandable_container"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

</LinearLayout>