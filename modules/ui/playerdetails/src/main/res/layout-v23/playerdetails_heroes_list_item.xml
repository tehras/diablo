<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="?bgPrimary"
        android:foreground="?selectableItemBackground"
        android:id="@+id/playerdetails_hero_container"
        android:layout_marginTop="@dimen/default_padding_small"
        android:layout_marginBottom="@dimen/default_padding_small"
        android:layout_marginStart="@dimen/default_padding_small"
        android:elevation="@dimen/elevation_small"
        android:padding="@dimen/default_padding_small"
        android:layout_width="128dp" android:layout_height="wrap_content"
>

    <ImageView
            android:id="@+id/playerdetails_hero_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/playerdetails_hero_avatar_size"
            tools:src="@tools:sample/avatars"
            android:layout_height="48dp"
            android:background="@drawable/common_views_round_border"
            android:contentDescription="@string/playerdetails_player_details_hero_avatar"/>

    <TextView
            android:id="@+id/playerdetails_hero_name"
            app:layout_constraintTop_toBottomOf="@+id/playerdetails_hero_avatar"
            tools:text="Mr Paladin"
            style="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            android:textColor="?typePrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/playerdetails_hero_level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerdetails_hero_name"
            tools:text="Level 711"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?typePrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/playerdetails_hero_extra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerdetails_hero_level"
            tools:text="Seasonal"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?typePrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>